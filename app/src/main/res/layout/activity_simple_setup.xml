<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:text="@string/range_frequency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <it.sephiroth.android.library.rangeseekbar.RangeSeekBar
        android:id="@+id/frame_rate"
        style="@style/Base.Sephiroth.Widget.RangeSeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:max="100"
        app:range_progress_endValue="5000"
        app:range_progress_startEnd_minDiff="100"
        app:range_progress_startValue="500" />

    <Button
        android:id="@+id/btn_create_gif"
        android:text="@string/create_gif"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>